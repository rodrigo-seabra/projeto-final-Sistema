@model LookingThings.Models.Usuario

@{
    ViewData["Title"] = "Editando...";
}

<h1 class="text-center" style="color: #32CD32;">Editando: @Html.DisplayTextFor(model => model.UsuarioNome)</h1>

<div class="login-box">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UsuarioId" />

        <div class="user-box">
            <input asp-for="UsuarioNome" class="form-control" required="" />
            <label asp-for="UsuarioNome" class="control-label">Nome</label>
            <span asp-validation-for="UsuarioNome" class="text-danger"></span>
        </div>

        <div class="user-box">
            <input asp-for="UsuarioEmail" class="form-control" required="" />
            <label asp-for="UsuarioEmail" class="control-label">Email</label>
            <span asp-validation-for="UsuarioEmail" class="text-danger"></span>
        </div>

        <div class="user-box">
            <input asp-for="UsuarioTelefone" class="form-control" required="" />
            <label asp-for="UsuarioTelefone" class="control-label">Telefone</label>
            <span asp-validation-for="UsuarioTelefone" class="text-danger"></span>
        </div>

        <div class="user-box">
            <input asp-for="UsuarioSenha"  class="form-control" required="" />
            <label asp-for="UsuarioSenha" class="control-label">Senha</label>
            <span asp-validation-for="UsuarioSenha" class="text-danger"></span>
        </div>

        <center>
            <a href="#" onclick="document.forms[0].submit();" class="send-button">
                SALVAR
                <span></span>
            </a>
        </center>
    </form>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
